<% include head.ejs %>
<% include sidebar.ejs %>
<div class="row">
        <div class="col-lg-12">
            <div class="card-box">
                <h4 class="m-t-0 header-title">All Uploaded Files</h4>
                <p class="text-muted font-14 m-b-20">
                    select the file to serch a text in it
                </p>

                <table class="table">
                    <thead class="thead-dark">
                    <tr>
                        <th>No.</th>
                        <th>File Title</th>
                        <th>File Name</th>
                        <th>Search Text</th>
                    </tr>
                    </thead>
                    <tbody>
                    <% data.forEach((file,index)=>{ %>
                    <tr>
                        <th scope="row"><%= index + 1 %></th>
                        <td><%= file.file_title %></td>
                        <td><%= file.file_name %></td>
                        <td><a href=<%= "/file/search/text/" + file._id %> ><button type="button" class="btn btn-outline-secondary waves-light waves-effect">Search Text</button></a></td>
                    </tr>
                    <% }) %>
                    </tbody>
                </table>
            </div>

        </div>
    </div>
        
        
<% include footer.ejs %>