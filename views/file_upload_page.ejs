<% include head.ejs %>
<% include sidebar.ejs %>

                <!-- Start Page content -->
                <div class="content">
                        <div class="container-fluid">
    
                            <div class="row">
                                <div class="col-12">
                                    <div class="card-box">
                                        <h4 class="m-t-0 header-title">Add File</h4>
                                        <p class="text-muted m-b-30 font-14">
                                            Please add the file
                                        </p>
    
                                        <div class="row">
                                            <div class="col-12">
                                                <div class="p-20">
                                                    <form class="form-horizontal" role="form" method="post" action="/add/file" encType="multipart/form-data">
                                                        <% if(message!=""){ %>
                                                          <div class="form-group row">
                                                                <label class="col-2 col-form-label"></label>
                                                                <div class="col-10">
                                                                        <div class="alert alert-danger" role="alert">
                                                                                <h4><%= message %></h4>
                                                                          </div>
                                                                </div>
                                                            </div>
                                                            <% } %>
                                                        <div class="form-group row">
                                                            <label class="col-2 col-form-label">Title</label>
                                                            <div class="col-10">
                                                                <input type="text" class="form-control" name="file_title" placeholder="Enter Title of the File">
                                                            </div>
                                                        </div>
                                                       
                                                        <div class="form-group row">
                                                            <label class="col-2 col-form-label">Uploade File</label>
                                                            <div class="col-10">
                                                                <input type="file" class="form-control"  name="fileup">
                                                            </div>
                                                        </div>
                                                        
                                                        <button type="submit" style="float:right;" class="btn btn-outline-primary waves-light waves-effect">Add</button>
    
                                                    </form>
                                                </div>
                                            </div>
    
                                        </div>
                                        <!-- end row -->
    
                                    </div> <!-- end card-box -->
                                </div><!-- end col -->
                            </div>
                            <!-- end row -->
                        </div>
                    </div>
                
                                                    
<% include footer.ejs %>
